@model WebResumen.Models.ViewModels.LoginViewModel



@{
    Layout = "";
}

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@{
    ViewBag.Title = "Login de Usuario";

}
@if (TempData["Fail"] != null)
{

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Fail"].ToString()!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

@if (TempData["Grupo"] != null)
{

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Grupo"].ToString()!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

@if (TempData["Bloqueo"] != null)
{

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Bloqueo"].ToString()!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}





<div class="container justify-content-center mt-5">
    @*<h5 class="justify-content-center">Login de Usuario</h5>*@
   
    <div class="row">
        <div class="col-sm">
           
        </div>
        <div class="col-sm shadow-lg p-3 mb-5 bg-white rounded">
            <div class="col text-center">
                <img src="~/img/login.png" id="icon" alt="User Icon"  class="img-fluid animated fadeInDown" />
               
            </div>
            <form method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    @*<label asp-for="Usuario"></label>*@
                    <input asp-for="Usuario" class="form-control img-fluid animated fadeInLeft" placeholder="usuario" />
                    <span asp-validation-for="Usuario" class="text-danger "></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Contraseña"></label>*@
                    <input asp-for="Contraseña" class="form-control img-fluid animated fadeInRight" placeholder="contraseña" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary img-fluid animated fadeInUp">INICIAR SESIÓN</button>
                </div>
            </form>
        </div>
        <div class="col-sm">
          
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
