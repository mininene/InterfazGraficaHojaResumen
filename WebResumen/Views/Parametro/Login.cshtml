@model WebResumen.Models.ViewModels.DoubleLoginParametrosViewModel

@{
    ViewData["Title"] = "Confirmación de Cambio Valor";
}

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
@if (TempData["Fail"] != null)
{

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Fail"].ToString()!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<a class="float-right mr-5" asp-area="" asp-controller="Parametro" asp-action="Index"><i class="fa fa-chevron-circle-left" style="font-size:48px;color:darkblue"></i></a>

<div class="container justify-content-center mt-5">
    <h5 class="justify-content-center">Confirmación de Usuario</h5>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Usuario"></label>
                    <input asp-for="Usuario" class="form-control bg-light" value="@httpContextAccessor.HttpContext.Session.GetString("SessionUser")" readonly />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contraseña"></label>
                    <input asp-for="Contraseña" class="form-control" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Comentario"></label>*@
                    <label>Motivo del Cambio</label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">

                    @*<input asp-for="Id" class="form-control" value="@ViewBag.datos.Id" type="hidden" />
                        <input asp-for="ImpresoraSabiUno" class="form-control" value="@ViewBag.datos.ImpresoraSabiUno" type="hidden" />
                        <input asp-for="ImpresoraSabiDos" class="form-control" value="@ViewBag.datos.ImpresoraSabiDos" type="hidden" />
                        <input asp-for="RutaLog" class="form-control" value="@ViewBag.datos.RutaLog" type="hidden" />
                        <input asp-for="Tiempo" class="form-control" value="@ViewBag.datos.Tiempo" type="hidden" />
                        <input asp-for="Reinicio" class="form-control" value="@ViewBag.datos.Reinicio" type="hidden" />*@

                    <input asp-for="Id" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionDatosP")" type="hidden" />
                    <input asp-for="ImpresoraSabiUno" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionImpresoraSabiUno")" type="hidden" />
                    <input asp-for="ImpresoraSabiDos" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionImpresoraSabiDos")" type="hidden" />
                    <input asp-for="RutaLog" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionRutaLog")" type="hidden" />
                    <input asp-for="Tiempo" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetInt32("Tiempo")" type="hidden" />
                    <input asp-for="Reinicio" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("Reinicio")" type="hidden" />




                </div>
                <button type="submit" class="btn btn-primary">Login</button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}