@model IEnumerable<WebResumen.Models.CiclosAutoclaves>

@{
    ViewData["Title"] = "Confirmación de Impresion";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<tbody>

    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor httpContextAccessor

    @using Microsoft.AspNetCore.Authorization
    @inject IAuthorizationService AuthorizationService
    @if ((await AuthorizationService.AuthorizeAsync(User, "ADUsers")).Succeeded)
    {
        <a type="button" class="btn btn-success" asp-action="Print" asp-route-id="@httpContextAccessor.HttpContext.Session.GetString("SessionDatosA")">Imprimir</a>
    }
    else
    {
<div class="form-group">

    @Html.DropDownList("ImpresoraNombre", new SelectList(ViewBag.impresoras, "--seleccionar--"))
    <a type="submit" class="btn btn-success" asp-action="PrintAS" asp-route-id="@httpContextAccessor.HttpContext.Session.GetString("SessionDatosA")">ImprimirAS</a>

</div>
            @*@foreach (var person in ViewBag.impresoras)
                {

                    <h1>@person</h1>

                }*@

            }

    </tbody>





































