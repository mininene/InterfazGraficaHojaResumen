@model IEnumerable<WebResumen.Models.AudiTrail>

@{
    ViewData["Title"] = "AudiTrail";
}

<h1>AudiTrail</h1>


<style>
    .fullscreen-spinner {
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 100000;
        background: #FFFFFF;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

