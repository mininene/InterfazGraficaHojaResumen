@model WebResumen.Models.ViewModels.DoubleLoginMaestroViewModel

@{
    ViewData["Title"] = "Confirmación de Cambio Estado";
}

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
@if (TempData["Fail"] != null)
{

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Fail"].ToString()!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<a class="float-right mr-5" asp-area="" asp-controller="MaestroAutoclave" asp-action="Index"><i class="fa fa-chevron-circle-left" style="font-size:48px;color:darkblue"></i></a>

<div class="container justify-content-center mt-5">
    <h5 class="justify-content-center">Confirmación de Usuario</h5>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Usuario"></label>
                    <input asp-for="Usuario" class="form-control bg-light" value="@httpContextAccessor.HttpContext.Session.GetString("SessionUser")" readonly />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contraseña"></label>
                    <input asp-for="Contraseña" class="form-control" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Comentario"></label>*@
                    <label>Motivo del Cambio</label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Id" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionDatosM")" type="hidden" />
                    <input asp-for="Matricula" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionMatriculaM")" type="hidden" />
                    <input asp-for="Nombre" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionNombreM")" type="hidden" />
                    <input asp-for="Version" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionVersionM")" type="hidden" />
                    <input asp-for="Ip" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionIpM")" type="hidden" />
                    <input asp-for="Seccion" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionSeccionM")" type="hidden" />
                    <input asp-for="Estado" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionEstadoM")" type="hidden" />
                    <input asp-for="UltimoCiclo" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionUltimoCicloM")" type="hidden" />
                    <input asp-for="RutaSalida" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionRutaSalidaM")" type="hidden" />
                    <input asp-for="RutaSalidaPDF" class="form-control" value="@httpContextAccessor.HttpContext.Session.GetString("SessionRutaSalidaPDFM")" type="hidden" />


                </div>
                <button type="submit" class="btn btn-primary">Login</button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}