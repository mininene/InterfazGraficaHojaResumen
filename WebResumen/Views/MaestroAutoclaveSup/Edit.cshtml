                @Html.DisplayFor(model => model.Matricula, new { @readonly = true })
                <input asp-for="Matricula" class="form-control" type="hidden" value="@httpContextAccessor.HttpContext.Session.GetString("SessionMatriculaMS")" />
                @*<span asp-validation-for="Matricula" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="Nombre" class="control-label"></label>*@
                <input asp-for="Nombre" class="form-control" type="hidden"value="@httpContextAccessor.HttpContext.Session.GetString("SessionNombreMS")" />
                @*<span asp-validation-for="Nombre" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="Version" class="control-label"></label>*@
                <input asp-for="Version" class="form-control" type="hidden"value="@httpContextAccessor.HttpContext.Session.GetString("SessionVersionMS")" />
                @*<span asp-validation-for="Version" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="Ip" class="control-label"></label>*@
