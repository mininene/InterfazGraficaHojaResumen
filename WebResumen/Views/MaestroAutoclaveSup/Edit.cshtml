@model WebResumen.Models.MaestroAutoclave

@{
    ViewData["Title"] = "Editar";
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
<h1>Editar</h1>

<h4>Control Estado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
