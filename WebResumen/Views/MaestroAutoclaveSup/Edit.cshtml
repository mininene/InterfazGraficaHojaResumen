                @*<span asp-validation-for="Ip" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="Seccion" class="control-label"></label>*@
                <input asp-for="Seccion" class="form-control" type="hidden"value="@httpContextAccessor.HttpContext.Session.GetString("SessionSeccionMS")" />
                @*<span asp-validation-for="Seccion" class="text-danger"></span>*@
            </div>
            @*<div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>*@
            <label asp-for="Estado" class="control-label"></label>
            <select class="form-control" id="Estado" name="Estado">
                <option value=True >True</option>
                <option value="False">False</option>
            </select>




            <div class="form-group">
                @*<label asp-for="UltimoCiclo" class="control-label"></label>*@
                <input asp-for="UltimoCiclo" class="form-control" type="hidden"value="@httpContextAccessor.HttpContext.Session.GetString("SessionUltimoCicloMS")" />
                @*<span asp-validation-for="UltimoCiclo" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="RutaSalida" class="control-label"></label>*@
                <input asp-for="RutaSalida" class="form-control" type="hidden" value="@httpContextAccessor.HttpContext.Session.GetString("SessionRutaSalidaMS")"/>
                @*<span asp-validation-for="RutaSalida" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="RutaSalidaPdf" class="control-label"></label>*@
                <input asp-for="RutaSalidaPdf" class="form-control" type="hidden"value="@httpContextAccessor.HttpContext.Session.GetString("SessionRutaSalidaPDFMS")" />
                @*<span asp-validation-for="RutaSalidaPdf" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
