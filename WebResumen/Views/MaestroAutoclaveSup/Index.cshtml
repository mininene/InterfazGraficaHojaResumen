@model IEnumerable<WebResumen.Models.MaestroAutoclave>

@{
    ViewData["Title"] = "Control Estado";
}

<h1>Estado AutoClaves</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<div class="mt-4" style="height: 500px; overflow: auto;">
    <table class="table table-sm">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Matricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    Acciones
                </th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    
                <td>
                    @*@Html.DisplayFor(modelItem => item.Estado)*@
                    @( item.Estado == true ? "Activo" : "Inactivo")

                </td>
                    
                    <td>
                       
                        <a type="button" class="btn btn-success btn-sm" asp-action="Login" asp-route-id="@item.Id">Modificar</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>